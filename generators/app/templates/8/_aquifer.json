{
  "name": "<%= humanName %>",
  "core": 8,
  "build": {
    "method": "drush make",
    "directory": "build",
    "makeFile": "drupal.make.yml"
  },
  "sync": {
    "directories": {
      "root": {
        "destination": "",
        "method": "symlink",
        "conflict": "overwrite"
      },
      "modules/custom": {
        "destination": "modules/custom",
        "method": "symlink",
        "conflict": "overwrite"
      },
      "profiles": {
        "destination": "profiles/custom",
        "method": "symlink",
        "conflict": "overwrite"
      },
      "themes/custom": {
        "destination": "themes/custom",
        "method": "symlink",
        "conflict": "overwrite"
      },
      "files": {
        "destination": "sites/default/files",
        "method": "symlink",
        "conflict": "overwrite"
      }
    },
    "files": {
      "settings/settings.php": {
        "destination": "sites/default/settings.php",
        "method": "symlink",
        "conflict": "overwrite"
      },
      "settings/settings.secret.php": {
        "destination": "sites/default/settings.secret.php",
        "method": "symlink",
        "conflict": "overwrite"
      },
      "settings/settings.local.php": {
        "destination": "sites/default/settings.local.php",
        "method": "symlink",
        "conflict": "overwrite"
      }
    }
  },
  "run": {
    "scripts": {
      "refresh": [
        "drush updb -y",
        "drush cr -y"
      ]
    },
    "postBuild": []
  },
  "extensions": {
    "aquifer-git": {
      "source": "https://github.com/kporras07/aquifer-git.git#f2c88ac",
      "remote": "",
      "branch": "master",
      "name": "CI Bot",
      "email": "ci@estudiomanati.com",
      "deploymentFiles": [
        {
          "src": "files/config",
          "dest": "sites/default/config"
        },
        {
          "src": "root/.gitignore",
          "dest": ".gitignore"
        },
        {
          "src": "root/.htaccess",
          "dest": ".htaccess"
        }
      ],
      "excludeLinks": ["sites/default/files"],
      "addlinks": [],
      "delPatterns": ["*", "!.git"]
    }
  }
}
